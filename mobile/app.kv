#:import dp kivy.metrics.dp
<TitleLabel@Label>:
    font_size: '20sp'
    bold: True
    color: 0,0,0,1

<CustomInput@TextInput>:
    size_hint_y: None
    height: dp(40)
    multiline: False
    padding: [10, 10]

<CustomButton@Button>:
    size_hint_y: None
    height: dp(44)
    background_normal: ''
    background_color: (0.2, 0.6, 0.86, 1)
    color: (1,1,1,1)
    font_size: '15sp'
    bold: True

<LoginScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        TitleLabel:
            text: "Login"

        CustomInput:
            id: username
            hint_text: "Username"

        CustomInput:
            id: password
            hint_text: "Password"
            password: True

        CustomButton:
            text: "Login"
            on_release: app.login(username.text, password.text)

        Widget:

<HomeScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        TitleLabel:
            text: "Home"

        CustomButton:
            text: "Predict"
            on_release: root.manager.current = "predict"

        CustomButton:
            text: "Logout"
            on_release: app.logout()

        Label:
            id: time_label
            text: "00:00:00"

<PredictScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        TitleLabel:
            text: "Prediction"

        CustomInput:
            id: input_data
            hint_text: "Enter input data"

        CustomButton:
            text: "Predict"
            on_release: app.make_prediction(input_data.text)

        CustomButton:
            text: "Back"
            on_release: root.manager.current = "home"

<ResultScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        TitleLabel:
            text: "Result"

        Label:
            id: result_label
            text: "Result will appear here"

        CustomButton:
            text: "Back to Home"
            on_release: root.manager.current = "home"

<RootWidget>:
    LoginScreen:
        name: "login"
    HomeScreen:
        name: "home"
    PredictScreen:
        name: "predict"
    ResultScreen:
        name: "result"
