ScreenManager:
    LoginScreen:
    RegisterScreen:
    DashboardScreen:

<LoginScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Login"
            font_size: 24
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
            password: True
        Button:
            text: "Login"
            on_release: root.do_login(username.text, password.text)
        Button:
            text: "Register"
            on_release: app.root.current = "register"

<RegisterScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Register"
            font_size: 24
        TextInput:
            id: username
            hint_text: "Username"
        TextInput:
            id: password
            hint_text: "Password"
            password: True
        Button:
            text: "Register"
            on_release: root.do_register(username.text, password.text)
        Button:
            text: "Back to Login"
            on_release: app.root.current = "login"

<DashboardScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Welcome to MCGG Predictor"
            font_size: 24
        Button:
            text: "Logout"
            on_release: app.root.current = "login"
